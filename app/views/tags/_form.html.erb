<div class='add-tag-dashfolio'>
  <button type='button' class='btn btn-primary btn-sm' id='add-tag-form-button' data-toggle='tooltip' data-placement='right' title='<%= tags_tooltip(current_user, artist) %>'>
    <i class='fa fa-plus-square' aria-hidden='true'></i>
    Tag
  </button>

  <div id='add-tag-input-group'>
    <%= form_for :tag, url: artist_tags_path(artist), html: { method: :post, id: 'add_tag_form', class: 'input-group input-group-sm' }, remote: true do |f| %>
      <%= text_field_tag :name, nil, placeholder: 'Add a tag', class: 'form-control input-sm', id: 'add-tag-input',
            required: 'true', maxlength: "15" %>
      <span class='input-group-btn'>
        <button class='btn btn-danger' id='cancel-tag-form-button' type='button'>
          <i class='fa fa-close' aria-hidden='true'></i>
        </button>
      </span>
    <% end %>
  </div>
</div>

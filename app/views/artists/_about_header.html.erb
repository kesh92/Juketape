<div class='container'>
  <div class='row' >
    <div class='col-md-1'></div>
    <div class='col-md-10'>
      <div class='dashfolio-about main-content'>
        <div class= 'about-header-container header-info' id='about-header' style='display: block;'>
          <a class='bio-header tablink' href='#bio-dashfolio' data-turbolink='false'>Bio</a>
          <a class='timeline-header tablink' href='#timeline-dashfolio' data-turbolink='false'>Timeline</a>
        </div>
        <div class='about-content'>
          <div class='tabcontent' id='bio-dashfolio' style='display: block;'>
            <p><%= best_in_place artist, :bio, as: :textarea, ok_button: 'Save', cancel_button: 'Cancel', place_holder: 'Add your Bio' %></p>
          </div>
          <div class='tabcontent' id='timeline-dashfolio'>
            <button type="button" class="btn btn-primary timeline-event-add"> Add Timeline Event </button>
            <button type="button" class="btn btn-danger timeline-event-cancel"> Cancel </button>
            <%= render partial: 'timeline_events/form' %>
            <% artist.timeline_events.each do  |event| %>
              <h3 class='timeline-title'><%= best_in_place event, :title, as: :input, ok_button: 'Save', cancel_button: 'Cancel' %></h3>
              <p class='timeline-date'><%= event.start_date %> - <%= event.end_time %></p>
              <p class='timeline-description'><%= best_in_place event, :description, as: :input, ok_button: 'Save', cancel_button: 'Cancel' %></p>
              <p class='timeline-location'><%= best_in_place event, :location, as: :input, ok_button: 'Save', cancel_button: 'Cancel', place_holder: 'Add location' %></p>
              <hr/>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class='col-md-1'> </div>
  </div>
</div>

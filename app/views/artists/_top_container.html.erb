<div class='container top-container'>
  <div class='row'>
    <div class='col-sm-1'> </div>
    <div class='col-sm-10'>
      <div class='col-md-2 hidden-sm hidden-xs'>
        <div class='bar bar-first'> </div>
        <div class='bar bar-second'> </div>
        <div class='bar bar-third'> </div>
      </div>
      <div class='col-md-4 dashfolio-profile-pic-connect-container'>
        <%= image_tag(current_user.image.thumb.url || 'generic_avatar.png', class: 'profile-pic-dashfolio') %>
        <div class='message-connect-buttons'>
          <button class='message-dashfolio'> <i class='fa fa-envelope' aria-hidden='true'></i>  </button>
          <button class='connect-dashfolio'> <i class='fa fa-user-plus' aria-hidden='true'></i> Connect </button>
        </div>
      </div>
      <div class='col-md-4 dashfolio-profile-name-container'>
        <h2><%= best_in_place artist, :act_name, as: :input, ok_button: 'Save', cancel_button: 'Cancel', place_holder: 'Add Act Name' %></h2>

        <p class='dashfolio-tagline'><%= best_in_place artist, :tag_line, as: :input, ok_button: 'Save', cancel_button: 'Cancel', place_holder: 'Add Tag Line' %></p>

        <div class='tag-container' id='tag-container'>
          <span class='dashfolio-tag'>Tag1</span>
          <span class='dashfolio-tag'>Tag2</span>
          <span class='dashfolio-tag'>Tag3</span>
        </div>


        <div class='add-tag-dashfolio'>
          <button type='button' class='btn btn-primary' id='add-tag-form-button'>
            <i class='fa fa-plus-square' aria-hidden='true'></i>
            Tag
          </button>

          <div class='input-group', id = 'add-tag-input-group'>
            <input type='text' class='form-control' value='' placeholder='Add a tag' id='add-tag-input'>
            <span class='input-group-btn'>
              <button class='btn btn-danger' id='cancel-tag-form-button' type='button'>
                <i class='fa fa-close' aria-hidden='true'></i>
              </button>
            </span>
          </div>
        </div>


        <div class='location-container'>
          
            <i class='fa fa-map-marker' aria-hidden='true'></i>
            <span class='dashfolio-location'>
              <%= best_in_place artist, :location, as: :input, ok_button: 'Save', cancel_button: 'Cancel', place_holder: 'Add Location' %>
            </span>
          
        </div>
        <span class='connection-number-dashfolio'> <strong> 500 connections</strong> </span>
        <div class='connection-container'>
          <div class='dashfolio-connection'>
            <img class='connection-profile-pic' src='/assets/generic_avatar-fa56ca290420c79308d1d387f152f0c6bf0ea9bcdab81eed808ec7fdfcb4f3f9.png' alt='Generic avatar'>
          </div>
          <div class='dashfolio-connection'>
            <img class='connection-profile-pic' src='/assets/generic_avatar-fa56ca290420c79308d1d387f152f0c6bf0ea9bcdab81eed808ec7fdfcb4f3f9.png' alt='Generic avatar'>
          </div>
          <div class='dashfolio-connection'>
            <img class='connection-profile-pic' src='/assets/generic_avatar-fa56ca290420c79308d1d387f152f0c6bf0ea9bcdab81eed808ec7fdfcb4f3f9.png' alt='Generic avatar'>
          </div>
          <div class='dashfolio-connection'>
            <img class='connection-profile-pic' src='/assets/generic_avatar-fa56ca290420c79308d1d387f152f0c6bf0ea9bcdab81eed808ec7fdfcb4f3f9.png' alt='Generic avatar'>
          </div>
          <!-- max number of connections should be 4 -->
          <div>
            <a class='all-connection-anchor' href='#'> See all connections </a>
          </div>
        </div>
      </div>
      <div class='col-md-2 hidden-sm hidden-xs right-bars'>
        <div class='bar bar-fourth'> </div>
        <div class='bar bar-fifth'> </div>
        <div class='bar bar-sixth'> </div>
      </div>
    </div>
    <div class='col-sm-1'> </div>
  </div>
</div>

<div class='dashfolio-pictures main-content'> 
  <div class='pictures-content media-content'>
    <div class='tabcontent' id='pictures-dashfolio' >
      <% if artist.instagram_network.present? %>
        <% if artist == current_user %>
          <div class='dashfolio-add-media dashfolio-picture-add-button'>
            <a class='btn btn-block btn-social btn-instagram' data-toggle='modal'
              data-target='#filterContentModal' data-url='<%= fetch_content_artists_path %>'
              data-content='instagram_images', data-container='dashfolio-pictures'>
              <span class='fa fa-instagram'> </span>
              Add photos
            </a>
          </div>
        <% end %>
        <ul class='pictures-list'>
          <% artist.instagram_network.images.each do |image| %>
            <li class='pictures-list-items dashfolio-content-li'>
              <div class='picture-body'>
                <p class='picture-account-name'>
                  <strong><%= image['user_full_name'] %></strong>
                </p>
                <div class='picture-image'>
                  <a href='<%= image['link'] %>' class='picture-link' target='_blank'> 
                    <%= image_tag(image['url'], class: 'instagram-picture picture-image') %>
                  </a>
                  <a href='https://www.instagram.com/<%= image['username'] %>' target='_blank'>
                    <%= image_tag('instagram_logo.png', class: 'picture-logo pull-right') %>
                  </a>
                </div>
              </div>
            </li>
          <% end if artist.instagram_network.present? %>
        </ul>
      <% else %>
        <div class='dashfolio-add-media dashfolio-picture-add-button'>
          <%= link_to connect_instagram_text, connect_instagram_link,
                  class: 'btn btn-block btn-social btn-instagram' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

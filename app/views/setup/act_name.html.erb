<div class='container onboarding'>
  <div class='row'>
    <div class='col-lg-2 col-md-2'> </div>
    <div class='col-lg-10 col-md-10'>
      <h3> Profile Setup </h3>
      <div class = 'onboarding-family'>
        <p> <strong>Act Name </strong> </p>
        <div class='panel panel-default'>
          <div class='panel-body'>
            <%= form_for current_user, url: tag_line_setup_index_path(), html: { method: :post } do |f| %>
              <div class='form-group'>
                <p> How would you or your act like to be known by on Juketape? </p>
                <%= f.text_field :act_name, value: current_user.act_name, class: 'form-control input-sm', placeholder: 'eg: The Beatles', required: true %>
              </div>
              <%= f.submit 'Next', class: 'onboarding-submit' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

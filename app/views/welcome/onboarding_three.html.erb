<!-- Header section -->
<%= render partial: 'static/header_logged_in' %>


<!-- Container section -->
<div class="container onboarding">
    <div class="row">
        <div class="col-lg-12 col-md-12">
           <h3> Profile Setup </h3>
           <div class = "onboarding-family">
            <p> <strong> Profile Picture </strong> </p>
            <div class="panel panel-default">           

             
              <div class="panel-body"> <!-- panel-body is a bootstrap class of a box -->
                
                <form>  

                 <%= image_tag("generic_avatar.png", class: "profile-image-onboarding hidden-xs") %> <!--hidden xs is a bootstrap class to not show the image on small screens -->             

                  <div class="form-group">
                    <br>
                    <p> Upload a profile picture </p>
                   
                    <input type="file">
                   
                  </div>
                  
                  <button type="submit" class="onboarding-submit"> Next </button> 
                  <a class = "skip-onboarding", href= "#"> skip </a>
                </form>
              </div>
            </div>
            </div>
        </div>
    </div>
</div>


<!-- Footer Section -->
<%= render partial: 'static/footer' %>